<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="actas_tree_view" model="ir.ui.view">
        <field name="name">actas tree</field>
        <field name="model">hr.employee.actas</field>
        <field name="arch" type="xml">
            <tree string="Administrative records">
                <field name="fecha"/>
                <field name="motivo"/>
                <field name="repercusion"/>
                <field name="accion"/>
                <field name="employee_ids"/>
            </tree>
        </field>
    </record>

    <record id="actas_form_view" model="ir.ui.view">
        <field name="name">actas form</field>
        <field name="model">hr.employee.actas</field>
        <field name="arch" type="xml">
            <form string="Administrative records" version="7.0">
                <sheet>
                    <group>
                        <field name="fecha"/>
                        <field name="motivo"/>
                        <field name="repercusion"/>
                        <field name="accion"/>
                    </group>
                    <separator string="Employees"/>
                    <field name="employee_ids" nolabel="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_actas" model="ir.actions.act_window">
        <field name="name">Administrative records</field>
        <field name="res_model">hr.employee.actas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem id="menu_actas" parent="hr.menu_hr_root" name="Actas administrativas"/>
    <menuitem id="menu_actas_child" parent="menu_actas" name="Actas administrativas" action="action_actas"/>

</odoo>
