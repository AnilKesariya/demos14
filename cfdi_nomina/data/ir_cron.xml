<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record forcecreate="True" id="ir_cron_create_faltas" model="ir.cron">
        <field name="name">Crear faltas</field>
        <field name="model_id" ref="cfdi_nomina.model_hr_attendance_gen_wiz"/>
        <field name="state">code</field>
        <field name="code">
env['hr.attendance.gen.wiz'].buscar_faltas_cron()
        </field>
        <field name="user_id" ref="base.user_root"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 22:00:00')"/>
    </record>

</odoo>
