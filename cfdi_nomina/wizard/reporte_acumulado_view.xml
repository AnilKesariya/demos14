<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
        <record model="ir.ui.view" id="reporte_acumulado_view_form">
            <field name="name">reporte.acumulado.view.form</field>
            <field name="model">cfdi_nomina.reporte.acumulado</field>
            <field name="arch" type="xml">
                <form string="Accumulated reports" version="7.0">
                    <group string="Periodo">
                        <field name="period_id" style="width:33%%"/>
                    </group>
                    <separator string="NÃ³minas"/>
                    <field name="nominas" domain="[('period_id','=',period_id)]"/>
                    <separator string="Reglas salariales (Agrupaciones)"/>
                    <field name="rule_group_ids"/>
                    <separator string="Empleados"/>
                    <field name="employee_ids"/>
                    <div attrs="{'invisible':[('datas','=',False)]}">
                        <group string="Archivo CSV">
                            <field name="fname" invisible="1"/>
                            <field name="datas" filename="fname" readonly="1"/>
                        </group>
                    </div>
                    <footer>
                        <button type="special" special="cancel" string="Close" icon="gtk-cancel"/>
                        <button type="object" string="CSV" name="action_reporte_excel" icon="gtk-execute"/>
                        <button type="object" string="List view" name="action_reporte_acumulado" icon="gtk-execute"/>
                    </footer>
                </form>
            </field>
        </record>
    
        <record id="action_reporte_acumulado" model="ir.actions.act_window">
            <field name="name">Accumulated reports</field>
            <field name="res_model">cfdi_nomina.reporte.acumulado</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="reporte_acumulado_view_form"/>
            <field name="target">new</field>
        </record>
        
        <menuitem id="menu_reporte_acumulado" parent="hr_payroll.menu_hr_root_payroll"
            action="action_reporte_acumulado"/>

          
        <record model="ir.ui.view" id="reporte_acumulado_line_view">
            <field name="name">reporte.acumulado.line.view</field>
            <field name="model">cfdi_nomina.reporte.acumulado.line</field>
            <field name="arch" type="xml">
                <field name="employee_id"/>
                <field name="codemp"/>
                <field name="rfc"/>
                <field name="imss"/>
                <field name="p_otras" string="Otras percepciones" sum="Total percepciones"/>
                <field name="d_otras" string="Otras deducciones" sum="Total deducciones"/>
                <field name="gravado" string="Gravado" sum="Total gravado"/>
                <field name="exento" string="Exento" sum="Total exento"/>
                <field name="neto" string="Neto" sum="Total neto"/>
            </field>
        </record>

    </data>
</openerp>    



