<odoo>

    <record model="ir.ui.view" id="view_hr_txtbanco">
        <field name="name">txt.banco.wiz.form</field>
        <field name="model">txt.banco.wiz</field>
        <field name="arch" type="xml">
            <form version="7.0">
                <group attrs="{'invisible':[('data_fname','=','X')]}">
                    <group>
                        <field name="company_ids" widget="many2many_tags" options="{'no_create': True}"
                              attrs="{'invisible':[('data_fname','!=',False)]}"/>
                        <field name="id_concepto" options="{'no_create': True}"
                              attrs="{'readonly':[('data_fname','!=',False)]}"/>
                    </group>
                    <group>
                        <field name="opt_tipo_pago" widget="radio"
                               attrs="{'readonly':[('data_fname','!=',False)]}"/>
                        <field name="data_file"  filename="data_fname"
                               attrs="{'invisible':[('data_fname','=',False)]}"/>
                        <field name="data_fname"  invisible="1" />
                    </group>
                </group>
                <group attrs="{'invisible':[('data_fname','!=','X')]}">
                    <group>
                        <field name="uma"/>
                    </group>
                    <group>
                    </group>
                </group>
                <footer>
                    <button name="action_update" string="Update" type="object" class="oe_highlight"
                            attrs="{'invisible':[('data_fname','!=','X')]}"/>
                    <button name="gen_txt" string="Generate Dispersion TXT" type="object" class="oe_highlight"
                            attrs="{'invisible':[('data_fname','!=',False)]}"/>

                    o
                    <button string="Discard"  special="cancel" />
                </footer>
            </form>
        </field>
    </record>

