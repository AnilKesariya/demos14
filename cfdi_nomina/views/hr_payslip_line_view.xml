<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_line_view_tree" model="ir.ui.view">
        <field name="name">hr.payslip.line.view.tree</field>
        <field name="model">hr.payslip.line</field>
        <field name="priority" eval="15"/>
        <field name="arch" type="xml">
            <tree string="Payslip line">
                <field name="slip_id"/>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="codigo_agrupador"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="gravado" sum="Total Grv/ISR"/>
                <field name="exento" sum="Total Ex/ISR"/>
                <field name="gravado_imss" sum="Total Grv/IMSS"/>
                <field name="exento_imss" sum="Total Ex/IMSS"/>
                <field name="gravado_infonavit" sum="Total Grv/Infonavit"/>
                <field name="exento_infonavit" sum="Total Ex/Infonavit"/>
                <field name="gravado_ptu" sum="Total Grv/PTU"/>
                <field name="exento_ptu" sum="Total Ex/PTU"/>
                <field name="total" sum="Total"/>
            </tree>
        </field>
    </record>

    <record id="hr_payslip_line_view_search" model="ir.ui.view">
        <field name="name">hr.payslip.line.view.search</field>
        <field name="model">hr.payslip.line</field>
        <field name="arch" type="xml">
            <search string="Payslip line">
              <field name="employee_id"/>
              <field name="name"/>
              <field name="code"/>
              <field name="slip_id"/>
              <field name="category_id"/>
              <group expand="0" string="Group by...">
                  <filter name="nomina" string="NÃ³mina" context="{'group_by': 'slip_id'}"/>
                  <filter name="empleado" string="Empleado" context="{'group_by': 'employee_id'}"/>
                  <filter name="categoria" string="CategorÃ­a" context="{'group_by': 'category_id'}"/>
              </group>
            </search>
        </field>
    </record>

    <record id="act_open_hr_payslip_line" model="ir.actions.act_window">
        <field name="name">Detalle</field>
        <field name="res_model">hr.payslip.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_payslip_line_view_tree"/>
        <field name="search_view_id" ref="hr_payslip_line_view_search"/>
    </record>

    <menuitem action="act_open_hr_payslip_line" id="menu_open_hr_payslip_line"
        parent="hr_work_entry_contract.menu_hr_payroll_root" sequence="99"/>

</odoo>
