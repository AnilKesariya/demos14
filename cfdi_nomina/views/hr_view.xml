                <attribute name="domain">[('employee_id', '?=', context.get('employee_id'))]</attribute>
            </xpath>
        
            <!--holidays_ids cambia con onchange, y si no lo considero en la vista, se pierden los cambios  JGO-->
            <xpath expr="//field[@name='worked_days_line_ids']/tree//field[@name='is_paid']" position="after">
                <field name="holiday_ids" widget="many2many_tags" invisible="0"/>
                <field name="dias_imss_ausencia" invisible="1"/>
                <field name="dias_imss_incapacidad" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='worked_days_line_ids']/form//field[@name='is_paid']" position="after">
