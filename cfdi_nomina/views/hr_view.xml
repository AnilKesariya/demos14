                <field name="uuid" invisible="1"/>
            </xpath>

            <xpath expr="//button[@name='action_payslip_cancel']" position="attributes">
                <attribute name="states">draft,hr_check,confirm,verify,done</attribute>
            </xpath>

            <xpath expr="//field[@name='worked_days_line_ids']" position="attributes">
                <attribute name="context">{'employee_id': employee_id}</attribute>
            </xpath>
