<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_type_view_tree" model="ir.ui.view">
        <field name="name">tipo.reglas.tree</field>
        <field name="model">cfdi_nomina.codigo.agrupador</field>
        <field name="arch" type="xml">
            <tree string="Tipo" editable="bottom">
                <field name="name"/>
                <field name="code"/>
                <field name="tipo_id"/>
            </tree>
        </field>
    </record>

    <record id="act_open_hr_type" model="ir.actions.act_window">
        <field name="name">Catalog SAT type rules</field>
        <field name="res_model">cfdi_nomina.codigo.agrupador</field>
        <field name="view_mode">tree</field>
        <field name="type">ir.actions.act_window</field>    
    </record>

    <menuitem action="act_open_hr_type" id="menu_open_hr_tipo" groups="hr.group_hr_manager"
        parent="hr_work_entry_contract.menu_hr_payroll_configuration"/>

</odoo>
