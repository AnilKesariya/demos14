<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_partner_form_inherit_emp">
        <field name="name">res.partner.form.inherit.emp</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="before">
                <group>
                    <field name="employee" attrs="{'invisible': [ ('is_company','=',True)]}"/>
                    <!-- <field name="employee" attrs="{'invisible': ['|', ('is_company','=',True), '|', ('customer','=',True), ('supplier','=',True)]}"/> -->
                    <xpath expr="//form//sheet//group//group[2]field[@name='phone']" position="before">
                        <field name="rfc"/>
                    </xpath>
                </group>
            </field>
        </field>
    </record>

</odoo>
